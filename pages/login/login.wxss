page {
    background: #fff;
}

.login-btn {
    border: none;
    height: 88rpx;
    line-height: 88rpx;
    background: #04be01;
    color: #fff;
    font-size: 11pt;
    border-radius: 999rpx;
}

.login-btn::after {
    display: none;
}

.login-btn.button-hover {
    box-shadow: inset 0 5rpx 30rpx rgba(0,0,0,.15);
}
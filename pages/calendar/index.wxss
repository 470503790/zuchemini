/**index.wxss**/
.t_red{
  color: red;
}
.t_blue{
  color: royalblue;
}
.calendar{

  margin: 0 1vw;
}
.time{
  padding: 16rpx 20rpx;
  background-color: wheat;
  display: flex;
}
.time view{
  flex: 1;
  font-size: 30rpx;

}
.time view text{
  font-size: 38rpx;
}
.weekName{
   background-color: gainsboro;
  width: 100%;
  display: flex;
  padding: 16rpx 0;
}
.weekName view{
  flex: 1;
  text-align: center;
}
.sunday,.saturday{
  color: red;
}
.week{
  width: 100%;
}
.week view{
  width: 14.2%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  margin: 20rpx 0;
  text-align: center;
}
.week view text{
  width: 100%;
  height: 100%;

  display: inline-block;
}
.calendarSign{
  margin: 20rpx;
}
